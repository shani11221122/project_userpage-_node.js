<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>All Users</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="/stylesheet/style.css" />
</head>
<body class="bg-zinc-900 text-white min-h-screen">
  <div class="max-w-6xl mx-auto px-4 py-8">
    
    <!-- Back to home link -->
    <a href="/" class="text-blue-500 hover:text-blue-700 mb-6 inline-block text-lg">‚Üê Back to Home</a>

    <!-- Heading -->
    <h1 class="text-4xl font-bold mb-8 text-center tracking-tight">All Users</h1>

    <!-- User list section -->
    <div class="users flex flex-wrap justify-center gap-6">
      <% if (users.length === 0) { %>
        <p class="text-gray-400 text-center text-white bg-black w-full">No users found.</p>
      <% } else { %>
        <% users.forEach(user => { %>
          <div class="user w-72 p-6 bg-zinc-800 rounded-lg shadow-md text-center">
            <img class="w-20 h-20 rounded-full mx-auto mb-4 object-cover object-fit-contain" src="<%= user.image %>" alt="User Image">
            <h2 class="text-xl font-semibold mb-1"><%= user.name %></h2>
            <p class="text-gray-400 mb-4"><%= user.email %></p>
            <div class="flex justify-center gap-2">
              <a href="/edit/<%= user._id %>" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Edit</a>
              <a href="/delete/<%= user._id %>" class="bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded">Delete</a>
            </div>
          </div>
        <% }); %>
      <% } %>
    </div>

  </div>
</body>
</html>
